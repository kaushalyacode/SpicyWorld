@page
@model SpicyRazorTemp.Pages.Categories.IndexModel

<partial name="_Notification"/>
<div class="container">
    <div class="row p-4 pb-3">
        <div class="col-md-6">
            <h1 class="text-primary">CATEGORY LIST</h1>
        </div>
        <div class="col-md-6 text-end">
            <a  asp-page="/categories/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in Model.CategoryList.OrderBy(e=>e.DisplayOrder)){
            <tr>
                <th scope="row">@category.Id</th>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-page="/categories/edit" asp-route-id ="@category.Id" class="btn btn-primary rounded mx-2">
                            <i class="bi bi-pencil-sqare"></i> Edit
                        </a>
                        <a asp-page="/categories/delete"  asp-route-id="@category.Id"  class="btn btn-danger rounded mx-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>        
        }       
       
    </tbody>
</table>

