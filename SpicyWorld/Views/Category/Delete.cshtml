@model Category
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        <input asp-for="Id" hidden/>
        </div><div class=" row mb-3 p-1">
            <label asp-for="Name" class="p-0">Category Name</label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class=" row mb-3 p-1">
            <label asp-for="Description" class="p-0">Category Description</label>
            <input asp-for="Description" disabled class="form-control" />

        </div>
        <div class="row mb-3 p-1">
            <label asp-for="DisplayOrder" class="p-0">Display Order</label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">Back to List</a>
            </div>
        </div>
    </div>
</form>
